<?xml version="1.0"?>
<bindings
  xmlns="http://www.mozilla.org/xbl"
  xmlns:xbl="http://www.mozilla.org/xbl"
    xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
>
<binding id="securepwd">
  <handlers>
    <handler event="focus" action="this.value=''; this.removeAttribute('secure');"/>
  </handlers>
</binding>
</bindings>
